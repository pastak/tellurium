{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": false,
    "noImplicitUseStrict": false,
    "sourceMap": true
  },

  "exclude": [
    "node_modules"
  ],

  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  },

  "filesGlob": [
    "./lib/**/*.ts",
    "./generators/**/*.ts",
    "!./node_modules/**/*.ts"
  ]
}
